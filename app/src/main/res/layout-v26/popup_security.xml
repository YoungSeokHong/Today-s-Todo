<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_rec_menu"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SecurityActivity"
    android:layout_marginHorizontal="10dp">

    <TextView
        android:id="@+id/tv_setSecurity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_setSecurity"
        android:gravity="center_horizontal"
        android:fontFamily="@font/bmjua"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"/>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:columnCount="6"
        android:rowCount="1">

        <View
            android:layout_width="0dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="2" />


        <EditText
            android:id="@+id/et_pw_simple"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="4"
            android:backgroundTint="#E89002"
            android:ems="4"
            android:focusable="false"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:textColor="#FA9F0B"
            android:textSize="40sp"/>

        <ImageView
            android:id="@+id/iv_del"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_columnWeight="1"
            android:src="@drawable/img_del" />

        <View
            android:layout_width="0dp"
            android:layout_row="0"
            android:layout_column="5"
            android:layout_columnWeight="1" />

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:columnCount="2"
        android:paddingHorizontal="50dp"
        android:rowCount="2">

        <Button
            android:id="@+id/btn_one"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/round_rec"
            android:fontFamily="@font/bmjua"
            android:text="@string/btn_one"
            android:textColor="#CC3300"
            android:padding="20sp"/>

        <Button
            android:id="@+id/btn_two"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/round_rec"
            android:fontFamily="@font/bmjua"
            android:text="@string/btn_two"
            android:textColor="#CC3300"
            android:padding="20sp"/>

        <Button
            android:id="@+id/btn_three"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/round_rec"
            android:fontFamily="@font/bmjua"
            android:text="@string/btn_three"
            android:textColor="#CC3300"
            android:padding="20sp"/>

        <Button
            android:id="@+id/btn_four"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/round_rec"
            android:fontFamily="@font/bmjua"
            android:text="@string/btn_four"
            android:textColor="#CC3300"
            android:padding="20sp"/>
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="40dp">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:background="@drawable/round_rec_small_gray"
            android:fontFamily="@font/bmjua"
            android:text="@string/btn_cancel"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:background="@drawable/round_rec_small"
            android:fontFamily="@font/bmjua"
            android:text="@string/btn_ok"
            android:textColor="@color/white"
            android:textSize="25dp" />

    </LinearLayout>

</LinearLayout>